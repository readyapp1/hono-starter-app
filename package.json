{
  "name": "hono-starter-app",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "better-auth-gen-schema": "pnpm dlx @better-auth/cli@latest generate --config ./better-auth.config.ts --output ./src/db/schema.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "sync-env": "./scripts/sync-env.sh",
    "setup-r2": "./scripts/setup-r2.sh",
    "update-cors": "./scripts/update-cors.sh",
    "update-cors-set-origins": "./scripts/update-cors.sh \"https://myapp.com\" \"https://www.myapp.com\""
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "aws4fetch": "^1.0.20",
    "better-auth": "^1.3.27",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.10"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "drizzle-kit": "^0.31.5",
    "wrangler": "^4.4.0"
  }
}